@model Product
<h1>Details Product</h1>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.ProductId)</td>
            <td>@Html.DisplayFor(model => model.ProductName)</td>
            <td>@Html.DisplayFor(model => model.Price)</td>

        </tr>
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-sm btn-info mt-3">Ürün Listesine Geri Dön</a>
</div>